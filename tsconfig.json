{
    "extends": "ts-node/node12/tsconfig.json",
    "ts-node": { 
        "exclude": ["node_modules"],
        "include": ["src", "test"]
    },
    "compilerOptions": {
        "target": "es6", 
        "strictPropertyInitialization": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
